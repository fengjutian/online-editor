{
  "name": "client",
  "version": "1.0.0",
  "description": "在线编辑器 Electron 应用",
  "main": "electron/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "type-check": "tsc --noEmit",
    "electron:dev": "concurrently \"BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:package": "npm run build && electron-builder --dir"
  },
  "build": {
    "appId": "com.online-editor.app",
    "productName": "在线编辑器",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*"
    ],
    "win": {
      "icon": "public/imgs/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "icon": "public/imgs/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "icon": "public/imgs",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "resolutions": {
    "styled-components": "^5"
  },
  "dependencies": {
    "@douyinfe/semi-ui": "^2.86.0",
    "@monaco-editor/react": "^4.6.0",
    "@types/semver": "^7.7.1",
    "@types/xterm": "^2.0.3",
    "axios": "^1.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "reset-css": "^5.0.2",
    "semver": "^7.7.2",
    "styled-components": "^6.1.19",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^9.2.1",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "electron-window-state": "^5.0.3",
    "typescript": "^4.9.5",
    "wait-on": "^8.0.5"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
